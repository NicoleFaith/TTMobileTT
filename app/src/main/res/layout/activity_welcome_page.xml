<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".LogSign.WelcomePage">

    <!-- App Logo -->
    <ImageView
        android:id="@+id/appLogo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/logo12"
        android:contentDescription="App Logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="70dp"
        app:tint="@color/primaryBlue" />

    <!-- Title Text -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Team Track"
        android:textSize="28sp"
        android:fontFamily="@font/interblack"
        android:textColor="@color/textPrimary"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/appLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="14dp"/>

    <!-- Subtitle Text -->
    <TextView
        android:id="@+id/subtitleText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Organize and manage your tasks effortlessly."
        android:textSize="16sp"
        android:textColor="@color/darkGray"
        android:gravity="center"
        android:paddingHorizontal="32dp"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"/>

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/welcomeGif"
        android:layout_width="370dp"
        android:layout_height="300dp"
        android:src="@drawable/welcome"
        app:layout_constraintTop_toBottomOf="@id/subtitleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="35dp"
        />

    <!-- Get Started Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/getStartedButton"
        android:layout_width="290dp"
        android:layout_height="56dp"
        android:text="Get Started"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/surface"
        android:backgroundTint="@color/primaryBlue"
        app:cornerRadius="14dp"
        app:layout_constraintTop_toBottomOf="@id/welcomeGif"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="48dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
