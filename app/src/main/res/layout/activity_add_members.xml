<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".AddMembers">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Members"
            android:textColor="@color/blueblue"
            android:fontFamily="@font/interblack"
            android:textSize="30sp"
            android:layout_gravity="center_vertical"
            android:paddingStart="12dp" />

        <SearchView
            android:id="@+id/searchView"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:queryHint="Search Member"
            android:background="@drawable/searchbackground"
            android:queryBackground="@android:color/transparent"
            android:outlineAmbientShadowColor="@color/dark_blue"
            android:outlineSpotShadowColor="@color/dark_blue" />

        <ListView
            android:id="@+id/SearchMembers"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:outlineSpotShadowColor="@color/dark_blue"
            android:outlineAmbientShadowColor="@color/dark_blue"
            android:cacheColorHint="@color/dark_blue"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
